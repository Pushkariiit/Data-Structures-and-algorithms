//Find maximum absolute difference. (hint: absolute difference of min and max)
import javax.swing.*;
import java.util.*;
public class Array3 {
    public static void main(String[] args) {
        int n;
        Scanner sc=new Scanner(System.in);
        n=sc.nextInt();
        int []arr=new int [n];

        for(int i=0;i<arr.length;i++){
            arr[i]=sc.nextInt();
        }

        float average=0;

        for(int i=0;i<n;i++){
            average+=arr[i];
        }
        average=average/n;
        System.out.println(average);
    }
}
    

